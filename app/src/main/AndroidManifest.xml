<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.irri.activity" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permissions.NETWORK_ACCESS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!--
     To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a user. This disconnect
     option is required to comply with the Google+ Sign-In developer policies
    -->
    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BarcodeActivity"
            android:label="@string/barcode" >
            <intent-filter>
                <action android:name="android.intent.action.BARCODEACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SymbologyActivity"
            android:label="@string/symbology" >
            <intent-filter>
                <action android:name="android.intent.action.SYMBOLOGYACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingBarcodeActivity"
            android:label="Barcode Settings" >
            <intent-filter>
                <action android:name="android.intent.action.SYMBOLOGYOPTIONSACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SymbologyOptionsActivity"
            android:label="@string/symbology_options" >
            <intent-filter>
                <action android:name="android.intent.action.SYMBOLOGYOPTIONSACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".VariableActivity"
            android:label="@string/title_activity_variable" >
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".RegisterUserActivity"
            android:label="@string/title_activity_register_user" >
        </activity>
        <activity
            android:name=".AuthenticateActivity"
            android:label="@string/title_activity_authenticate" >
        </activity>
        <activity
            android:name=".StudiesActivity"
            android:label="My Studies" >
        </activity>
        <activity
            android:name=".StudyActivity"
            android:label="@string/title_activity_study" >
        </activity>
        <activity
            android:name=".StudyMetadataActivity"
            android:label="Metadata" >
        </activity>
        <activity
            android:name=".DataEntryActivity"
            android:label="@string/title_activity_data_entry" >
        </activity>
        <activity
            android:name=".OauthTestingActivity"
            android:label="@string/title_activity_oauth_testing" >
        </activity>
        <activity
            android:name=".EasySocialAuthActivity"
            android:label="@string/title_activity_test" >
        </activity>
        <activity
            android:name=".StudyListActivity"
            android:label="Study List" >
        </activity>
        <activity
            android:name=".ImageLoaderActivity"
            android:label="@string/title_activity_image_loader" >
        </activity>
        <activity
            android:name=".StudyInfoTabActivity"
            android:label="@string/title_activity_study_info" >
        </activity>
        <activity
            android:name=".InternalStorageActivity"
            android:label="@string/title_activity_internal_storage" >
        </activity>
        <activity
            android:name=".StudyMainActivity"
            android:label="Study" >
        </activity>
        <activity
            android:name=".PlotDataEntryActivity"
            android:label="@string/title_activity_plot_data_entry" >
        </activity>
        <activity
            android:name=".TraitMeasuringActivity"
            android:label="@string/title_activity_trait_measuring" >
        </activity>
        <activity
            android:name=".VariableSetActivity"
            android:label="@string/title_activity_variable_set" >
        </activity>
    </application>

</manifest>
