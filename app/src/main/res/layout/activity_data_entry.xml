<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.irri.activity.DataEntryActivity"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">

                <EditText
                    android:layout_width="186dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/etSearchPlot"
                    android:hint="Search PlotNo"
                    android:inputType="number"
                    android:layout_gravity="center_vertical" />



                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnSearchPlot"
                    android:src="@drawable/search32"
                    android:layout_weight="0.24" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:layout_gravity="center|left">

                <Button
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="&lt;"
                    android:id="@+id/btnPlotPrev"
                    android:width="50dp"
                    android:onClick="actionBtnPlotPrev" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plot No."
                    android:id="@+id/textView10" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/etPlot"
                    android:text="101"
                    android:focusable="false"
                    android:editable="false"
                    android:textSize="30dp"
                    android:textIsSelectable="false"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    android:password="false" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text=">"
                    android:id="@+id/btnPlotNext"
                    android:width="50dp"
                    android:onClick="actionBtnPlotNext" />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Designation:"
                android:id="@+id/textView11"
                android:layout_column="0" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/etDesignation"
                android:text="IR 64"
                android:focusable="false"
                android:editable="false" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trait Measuring"
                android:id="@+id/textView12"
                android:layout_column="0"
                android:onClick="actionBtnSearchPlot" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_gravity="center|left">

                <Button
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="&lt;"
                    android:id="@+id/btnTraitPrev"
                    android:width="50dp"
                    android:onClick="actionBtnTraitPrev" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/etTrait"
                    android:text="FLW"
                    android:enabled="true"
                    android:editable="false"
                    android:textSize="30dp"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text=">"
                    android:id="@+id/btnTraitNext"
                    android:width="50dp"
                    android:onClick="actionBtnTraitNext" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvTraitLabel"
                android:text="Flowering"
                android:layout_gravity="center|left" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView14"
                android:layout_column="0" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Value"
                android:id="@+id/textView13"
                android:layout_column="0"
                android:layout_gravity="center|left" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_gravity="center|left">

                <EditText
                    android:layout_width="122dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/etValue"
                    android:layout_column="0" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scale"
                    android:id="@+id/btnScale"
                    android:src="@drawable/scale32"
                    android:onClick="actionBtnScale"
                    android:visibility="visible" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnDate"
                    android:src="@drawable/calendar32"
                    android:onClick="actionBtnDate" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnClear"
                    android:src="@drawable/clear"
                    android:onClick="actionBtnClear" />
            </LinearLayout>
        </TableRow>

    </TableLayout>

</LinearLayout>
