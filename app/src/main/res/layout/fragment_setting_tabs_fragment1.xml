<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="org.irri.activity.SettingTabsFragment1">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Year"
            android:id="@+id/textView29"
            android:textSize="18dp"
            android:layout_weight="0.50"
            android:layout_gravity="center_vertical"
            android:layout_above="@+id/textView30"
            android:layout_alignParentStart="true"
            android:layout_marginStart="22dp" />

        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/etYear"
            android:text="2016"
            android:layout_weight="0.50"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView30" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Season"
            android:id="@+id/textView30"
            android:textSize="18dp"
            android:layout_weight="1"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/etYear"
            android:layout_alignStart="@+id/textView29" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/radioGroup"
            android:layout_alignTop="@+id/textView30"
            android:layout_alignStart="@+id/etYear">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wet"
                android:id="@+id/radioButtonWS"
                android:checked="false" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dry"
                android:id="@+id/radioButtonDS"
                android:checked="false"
                android:nestedScrollingEnabled="true" />
        </RadioGroup>
    </RelativeLayout>

</FrameLayout>
